@{
    ViewData["Title"] = "About Us";
}

<!-- Page Background Color -->
<style>
    body {
        background-color: #DBCDA0;
    }
</style>

<!-- New Section: Image Below the 'About Us' -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <img src="~/images/logo.png" alt="About Us Image" class="img-fluid" style="width: 91%; border-radius: 10px;">
        </div>
    </div>
</div>

<!-- About Us Section: Left Text, Right Image -->
<div class="container mt-5" style="max-width: 95%; padding: 3rem;">
    <div class="row align-items-center" style="height: 600px; background-color: #2D4C39; color: white; border-radius: 10px; padding: 2rem;">
        <!-- Left Section: Text -->
        <div class="col-md-6" style="display: flex; flex-direction: column; justify-content: center; text-align: center;">
            <h1 style="font-family: 'Poppins', sans-serif; color: #FFFFFF; font-weight: bold;">
                About Us
            </h1>
            <p style="font-family: 'Poppins', sans-serif; font-size: 1.25rem; line-height: 1.75; margin-top: 1rem;">
                Empowering businesses with seamless employee management. Our system allows you to create, edit, and manage employee data effortlessly, all while securely connecting to your database for real-time updates. Simplify HR, streamline operations, and stay organized with our innovative platform.
            </p>
        </div>
        <!-- Right Section: Image -->
        <div class="col-md-6">
            <img src="~/images/image.jpg" alt="Empowering Businesses" class="img-fluid rounded" style="width: 100%; height: 100%; border-radius: 20px; object-fit: cover;">
        </div>
    </div>
</div>
