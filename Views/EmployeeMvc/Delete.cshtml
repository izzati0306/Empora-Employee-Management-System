@model WorksAway.Models.Employee
<!-- Page Background Color -->
<style>
    body {
        background-color: #DBCDA0;
    }
</style>
<h2 class="text-center" style="font-family: 'Georgia', serif; font-size: 2.5rem; color: #000000; font-weight: bold;">
    Delete Employee
</h2>

<div class="container mt-5">
    <div class="card shadow-sm p-4 rounded" style="background-color: #ffffff; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); border-radius: 15px;">
        <h3 class="text-center" style="font-family: 'Arial', sans-serif; color: #000000;">Are you sure you want to delete this employee?</h3>
        <div class="text-center mb-3">
            <h4 style="font-family: 'Poppins', sans-serif; color: #000000;">@Model.Name</h4>
            <p style="font-family: 'Arial', sans-serif; color: #000000;">Email: @Model.Email</p>
        </div>

        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="EmployeeID" />
            <button type="submit" class="btn btn-danger" style="border-radius: 8px; padding: 0.5rem 1.5rem; font-size: 1.1rem; background-color: #DC3545; color: white;">
                Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary" style="border-radius: 8px; padding: 0.5rem 1.5rem; font-size: 1.1rem; background-color: #D1D8DC;">
                Cancel
            </a>
        </form>
    </div>
</div>
